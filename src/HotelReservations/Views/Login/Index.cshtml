@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 my-4">
            <form method="post" asp-action="Test" class="rounded bg-dark p-5">
                <div class="form-group mb-3">
                    <label for="email" class="text-light">Email</label>
                    <input id="email" type="email" asp-for="Email" class="form-control" value="" required/>
                </div>
                <div class="form-group mb-2">
                    <label for="password" class="text-light">Password</label>
                    <input id="password" type="password" asp-for="Password" class="form-control"/>
                </div>
                <div class="mb-3">
                    <a href="#" class="link-dark text-danger hover text-decoration-underline">Forgot password?</a>
                </div>
                <div>
                    <input type="submit" class="btn btn-primary" />
                </div>    
            </form>
        </div>
    </div>
</div>
