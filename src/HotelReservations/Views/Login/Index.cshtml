@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-sm-4 my-4">
            <form method="post" asp-action="Test" class="rounded bg-dark p-5">
                <h3 class="text-light text-center mb-4">Reservations.com</h3>
                <h6 class="text-light text-center">Sign in</h6>
                <div class="form-group mb-3">
                    <label for="email" class="text-light">Email</label>
                    <input id="email" type="email" asp-for="Email" class="form-control" value="" required/>
                </div>
                <div class="form-group mb-2">
                    <label for="password" class="text-light">Password</label>
                    <input id="password" type="password" asp-for="Password" class="form-control" required/>
                </div>
                <div class="mb-3">
                    <a href="#" class="link-dark text-danger hover">Forgot password?</a> 
                </div>
                <div class="mb-3">
                    <span class="text-light">New to Reservations.com?</span>
                    <a href="#" class="link-dark text-primary">Sign up here</a>      
                </div>
                <div>
                    <input type="submit" class="btn btn-primary" />
                </div>    
            </form>
        </div>
    </div>
</div>
